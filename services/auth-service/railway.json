{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x ../../gradlew && cd ../.. && ./gradlew :services:auth-service:build -x test"
  },
  "deploy": {
    "startCommand": "java -jar ../../build/libs/auth-service.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

